{% extends "base_template.jinja2" %}

<!-- This is the main login page - 4 things can happen 
everything works well and user gets to go to home page
acct doesn't exist and needs to be redirected to register.jinja2
incorrect pwd so redirect to login again 
reset password -> redirect to reset password page 

Use Bootstrap errors or modals for error messages -->

{% block content %}
<form id="login-form" action="/auth/login" method="post">
  <div class="input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
    <input id="email" type="text" class="form-control" name="email" placeholder="Email">
  </div>
  <div class="input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
    <input id="password" type="password" class="form-control" name="password" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-primary">LOGIN!</button>
</form>
{% endblock %}